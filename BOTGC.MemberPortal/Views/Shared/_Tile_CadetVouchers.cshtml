@* Views/Shared/_Tile_CadetVouchers.cshtml *@
@model BOTGC.MemberPortal.Models.DashboardTileViewModel

@{
    var controller = string.IsNullOrWhiteSpace(Model.Controller) ? "Vouchers" : Model.Controller;
    var action = string.IsNullOrWhiteSpace(Model.Action) ? "Index" : Model.Action;
    var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl) ? "/img/qrcode.jpg" : Model.ImageUrl;
}

<a asp-controller="@controller"
   asp-action="@action"
   class="tile tile--dash tile--dash-vouchers">
    <div class="tile__avatar">
        <img src="@imageUrl" alt="Your golf buddy" />
    </div>

    <div class="tile__text">
        <div class="tile__name">
            @(string.IsNullOrWhiteSpace(Model.Title) ? "Your vouchers" : Model.Title)
        </div>
        <div class="tile__hint">
            Tap to see vouchers you can use.
        </div>
    </div>
</a>
