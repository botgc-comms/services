@{
    ViewData["Title"] = "Progress";
}

<div class="app-wrap dashboard">
    <header class="dashboard-header">
        <h1 class="dashboard-header__title">Progress</h1>
        <p class="dashboard-header__subtitle">
            Track your junior pathway progress and see what’s next.
        </p>
    </header>

    <section class="dashboard-section">
        <div class="tiles tiles--dashboard">
            <a class="tile tile--dash" href="/Home">
                <div class="tile__text">
                    <div class="tile__name">Back to dashboard</div>
                    <div class="tile__hint">Return to your home screen.</div>
                </div>
            </a>

            <div class="tile tile--dash">
                <div class="tile__text">
                    <div class="tile__name">Coming soon</div>
                    <div class="tile__hint">This page will show badges, milestones and goals.</div>
                </div>
            </div>
        </div>
    </section>
</div>
