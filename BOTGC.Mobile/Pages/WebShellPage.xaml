<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BOTGC.Mobile.WebShellPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:BOTGC.Mobile.Controls">

    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <WebView x:Name="Browser" Grid.Row="0" />

        <controls:BottomNavBar x:Name="BottomNav" Grid.Row="1" />
    </Grid>

</ContentPage>
